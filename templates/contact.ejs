<% title = 'Contact' %>

<%- include('./templates/common/header') %>

<div class="main-container">
    <section class="page-title page-title-4 image-bg overlay parallax">
        <div class="background-image-holder">
            <img alt="Background Image" class="background-image" src="img/cover12.jpg" />
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="uppercase mb0"><%= title %></h3>
                </div>
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-5">
                    <h4 class="uppercase">Get In Touch</h4>
                    <p>
                        Where does your business need more support? We offer a broad range of services that be customized to your needs. Contact us today, and we can start you on a path to success.
                    </p>
                    <hr>
                    <p>
                        <img src="https://images.unsplash.com/photo-1464550838636-1a3496df938b?ixlib=rb-1.2.1&auto=format&fit=crop&w=2720&q=80" />
                    </p>
                </div>
                <div class="col-sm-6 col-md-5 col-md-offset-1">
                    <form class="form-email" data-success="Thanks for your submission, we will be in touch shortly." data-error="Please fill all fields correctly.">
                        <input required type="text" class="validate-required" name="name" placeholder="Your Name (Required)" />
                        <input required type="email" class="validate-required validate-email" name="email" placeholder="Email Address (Required)" />
                        <input type="tel" name="phone" placeholder="Phone Number" />
                        <input type="url" name="url" placeholder="Business URL" />
                        <textarea class="validate" name="message" rows="4" placeholder="Message"></textarea>
                        <button type="submit">Send Message</button>
                    </form>
                </div>
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>

<%- include('./templates/common/footer') %>